{{#sprites}}
.i-{{name}} {
  background-size: {{{quarter total_width}}}px {{{quarter total_height}}}px;
  background-position: {{{quarter offset_x}}}px {{{quarter offset_y}}}px;
  &.large {
	  background-size: {{{half total_width}}}px {{{half total_height}}}px;
	  background-position: {{{half offset_x}}}px {{{half offset_y}}}px;
  }
}
{{/sprites}}